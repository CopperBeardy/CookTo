<div class="d-flex row gy-1 gx-1 align-items-center ms-2 mb-2">
    @foreach (var partIngredient in RecipePartIngredients)
    {
        <div class="d-flex row gy-1 gx-1 align-items-center ms-2 mb-2">
            <div class="ms-4">
                <RecipePartIngredientInput PartIngredient="@partIngredient" />
            </div>        
        </div> 
   

    <div class="col-sm-1">
            <button aria-label="removeItem" class="btn link-danger " @onclick="@(() => RecipePartIngredients.Remove(partIngredient))" type="button"><i class="bi bi-dash-circle"></i></button>
    </div>
    }
    </div>

@code {
    [Parameter] public List<RecipePartIngredient> RecipePartIngredients { get; set; } = new();
}

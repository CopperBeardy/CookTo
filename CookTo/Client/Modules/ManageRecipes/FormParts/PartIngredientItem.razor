@inject    IngredientManager IngredientManager

<div class="row gy-1 gx-1 align-items-center mb-2">

    <div class="mb-2 ">
        <div class="row mb-sm-1 ">
            <FormInputGroup Id="quantityInput" Label="Quantity" Width="col col-sm-2">
                <InputText aria-required="true" id="quantityInput" class="form-control  " @bind-Value="PartIngredient.Quantity" />
                <ValidationMessage aria-alert="true" For="@(() =>  PartIngredient.Quantity)" />
            </FormInputGroup>
            <FormInputGroup Id="measureInput" Label="Measure" Width="col col-sm-2">
                <InputText aria-required="true" id="measureInput" class="form-control  " @bind-Value="PartIngredient.Measure" />
                <ValidationMessage aria-alert="true" For="@(() =>  PartIngredient.Measure)" />
            </FormInputGroup>
            <FormInputGroup Id="ingredientInput" Label="Ingredient" Width="col col-sm-8">
                <PartIngredientTypeahead PartIngredient="@PartIngredient"   />
            </FormInputGroup>

        </div>
        <div class="d-flex row">
            <FormInputGroup Id="additionalInformationInput" Label="Additional Information" Width="col col-sm-8">
                <InputText id="additionalInformationInput" class="form-control " placeholder="additional information" @bind-Value="PartIngredient.AdditionalInformation" />
                <ValidationMessage aria-alert="true" For="@(() =>  PartIngredient.AdditionalInformation)" />
            </FormInputGroup>

        </div>
    </div>

</div>

@code {
    [Parameter] public PartIngredient PartIngredient { get; set; } = new PartIngredient();
}
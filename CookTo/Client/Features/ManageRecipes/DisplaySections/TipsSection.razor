  <div class="row mb-3">
                <h5><strong>Tips</strong></h5>
                <div class="card shadow p-3 mt-3">
                    @foreach (var tip in Tips)
                    {                     
                        <div class="card col col-sm-3">
                            <div class="p-3">
                            @tip.Description
                            </div>
                         </div>
                    }
                </div>
        </div>

@code {
    [Parameter]public List<Tip> Tips{ get; set; }
}

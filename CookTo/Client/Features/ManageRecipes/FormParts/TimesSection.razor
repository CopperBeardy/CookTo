 <FormSection Title="Times" >
        <FormInputGroup Width="col col-sm-6" Id="prepTimeFromTo" Label="Prep From/To" Margins="mb-2">
            <InputNumber aria-required="true" aria-label="prepTimeFrom" min=0 @bind-Value="Recipe.PrepTimeFrom" class="form-control" />
            <InputNumber aria-required="true" aria-label="prepTimeTo" placeholder="To" min=0 @bind-Value="Recipe.PrepTimeTo" class="form-control" />
            <ValidationMessage aria-alert="true" For="@(() => Recipe.PrepTimeFrom)" />
            <ValidationMessage aria-alert="true" For="@(() => Recipe.PrepTimeTo)" />
        </FormInputGroup>

        <FormInputGroup Width="col col-sm-6" Id="cookTimeFromTo" Label="Cook From/To" Margins="mb-2">
            <InputNumber aria-required="true" aria-label="cookTimeFrom" min=0 @bind-Value="Recipe.CookTimeFrom" class="form-control" />
            <InputNumber aria-required="true" aria-label="cookTimeTo" min=0 @bind-Value=" Recipe.CookTimeTo" class="form-control" />
            <ValidationMessage aria-alert="true" For="@(() => Recipe.CookTimeFrom)" />
            <ValidationMessage aria-alert="true" For="@(() => Recipe.CookTimeTo)" />
        </FormInputGroup>
    </FormSection>

@code {
    [Parameter] public FullRecipe Recipe{ get; set; }
}

 <FormSection Title="Times" >
        <FormInputGroup Width="col col-sm-6" Id="prepTimeFromTo" Label="Prep From/To" Margins="mb-2">
            <InputNumber aria-required="true" aria-label="prepTimeFrom" min=0 @bind-Value="Timings.PrepTimeFrom" class="form-control" />
            <InputNumber aria-required="true" aria-label="prepTimeTo" placeholder="To" min=0 @bind-Value="Timings.PrepTimeTo" class="form-control" />
            <ValidationMessage aria-alert="true" For="@(() => Timings.PrepTimeFrom)" />
            <ValidationMessage aria-alert="true" For="@(() => Timings.PrepTimeTo)" />
        </FormInputGroup>

        <FormInputGroup Width="col col-sm-6" Id="cookTimeFromTo" Label="Cook From/To" Margins="mb-2">
            <InputNumber aria-required="true" aria-label="cookTimeFrom" min=0 @bind-Value="Timings.CookTimeFrom" class="form-control" />
            <InputNumber aria-required="true" aria-label="cookTimeTo" min=0 @bind-Value=" Timings.CookTimeTo" class="form-control" />
            <ValidationMessage aria-alert="true" For="@(() => Timings.CookTimeFrom)" />
            <ValidationMessage aria-alert="true" For="@(() => Timings.CookTimeTo)" />
        </FormInputGroup>
    </FormSection>

@code {
    [Parameter] public Timings Timings{ get; set; }
}

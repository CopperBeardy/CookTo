<FormSection Title="Details" >    
    <FormInputGroup Width="col col-sm-12"  Id="recipeTitle" Label="Title" Margins="mb-2" >
        <InputText @bind-Value="Recipe.Title" aria-required="true" class="form-control" id="recipeTitle" />
        <ValidationMessage aria-alert="true"  For="@(() => Recipe.Title)" />
    </FormInputGroup>

    <FormInputGroup Width="col col-sm-12" Id="recipeDescription"  Label="Description" Margins="mb-2" >
        <InputTextArea aria-multiline="true" aria-required="true" @bind-Value="Recipe.Description" rows="6" class="form-control" id="recipeDescription" />
        <ValidationMessage aria-alert="true"  For="@(() => Recipe.Description)" />
    </FormInputGroup>

    <FormInputGroup Width="col col-sm-6" Id="serves" Label="Serves" Margins="mb-2" >
        <InputText aria-required="true" @bind-Value="Recipe.Serves" class="form-control" id="serves" />
        <ValidationMessage aria-alert="true" For="@(() => Recipe.Serves)" />
    </FormInputGroup>
        
    <FormInputGroup Width="col col-sm-6"  Id="recipeCreator" Label="Creator" Margins="mb-2" >
        <InputText @bind-Value="Recipe.Creator" class="form-control" id="recipeCreator" />      
    </FormInputGroup>

    <FormInputGroup Width="col col-sm-6"  Id="recipeCuisine" Label="Cuisine" Margins="mb-2" >
           <CuisineTypeahead Recipe="@Recipe" />
     
    </FormInputGroup>
  
     <FormInputGroup Width="col col-sm-6"  Id="recipeCategory" Label="Category" Margins="mb-2" >
        <CategoryTypeahead Recipe="@Recipe" />
      
    </FormInputGroup>
 
          <FormInputGroup Width="col col-sm-6" Id="prepTime" Label="Prep Time" Margins="mb-2">
            <InputText aria-required="true" aria-label="prepTime" @bind-Value="Recipe.PrepTime" class="form-control"  />
           <ValidationMessage aria-alert="true" For="@(() => Recipe.PrepTime)" />
         </FormInputGroup>

        <FormInputGroup Width="col col-sm-6" Id="cookTime" Label="Cook Time" Margins="mb-2">
            <InputText aria-required="true" aria-label="cookTime"  @bind-Value="Recipe.CookTime" class="form-control" />
           <ValidationMessage aria-alert="true" For="@(() => Recipe.CookTime)" />

        </FormInputGroup>

    @*add dietary*@

</FormSection>


@code {
    [Parameter] public Recipe Recipe { get; set; } = new Recipe();
}